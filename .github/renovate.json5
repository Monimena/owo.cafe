{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "regexManagers": [
    {
      "fileMatch": [ "^Dockerfile$" ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/mastodon/mastodon",
      "matchStrings": [
        "ARG MASTODON_VERSION=\"(?<currentValue>.*)\""
      ]
    }
  ]
}
